<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 200px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #007bff;
            color: #fff;
        }

            .sidebar a, .sidebar button {
                text-decoration: none;
                color: #fff;
                list-style: none;
            }

        .dropdown-menu {
            background-color: #007bff;
            padding: 5px 0;
        }

            .dropdown-menu a, .btn-logout {
                padding-left: 10px;
                margin-left: 10px;
                color: #fff;
                padding: 10px 20px;
                display: block;
                border-bottom: 1px solid #fff;
                font-size: 18px;
                transition: border-color 0.3s;
            }

                .dropdown-menu a:hover, .dropdown-menu a:focus, .dropdown-menu a:active, .btn-logout:hover {
                    background-color: #0056b3;
                }

                .dropdown-menu a:focus, .dropdown-menu a:active {
                    border-color: #000;
                }

        .btn-logout {
            color: #fff;
            background-color: #dc3545;
            border: none;
            padding: 10px 20px;
            margin-top: 20px;
        }

        .dropdown button {
            color: #000;
            margin-left: 10px;
        }

        .content {
            margin-left: 200px;
            padding: 20px;
        }

        .profile-info {
            display: none;
            margin-top: 20px;
        }

            .profile-info.active {
                display: block;
            }

            .profile-info table {
                width: 100%;
                border-collapse: collapse;
            }

                .profile-info table td {
                    padding: 10px 0;
                    border-bottom: 1px solid #000;
                }
    </style>
    <title>Your Page Title</title>
</head>
<body>
    <div class="sidebar">
        <h2 style="padding-left: 50px;">Profile</h2>
        <div class="dropdown">
            <h4>Xem Thông Tin</h4>
            <ul class="" aria-labelledby="dropdownMenuButton">
                <li><a class="nav-item" href="~/Customer/ViewInformation">Cá Nhân</a></li>
                <li><a class="nav-item" href="~/Customer/ViewHistory">Lịch Sử Đặt</a></li>
                @*@{
                    var customerId = Session["MaKH"]; // Lấy mã khách hàng từ session

                }
                <li><a class="nav-item" href="~/Customer/ViewOrder/@customerId">Đơn Đặt</a></li>*@
                <li><a class="nav-item" href="~/Customer/FilteredServices">Xem Dịch Vụ</a></li>
                <li><a class="nav-item" href="~/Customer/ViewOrderList">Danh Sách Đơn Đặt</a></li>
                @*<li><a class="nav-item" href="~/Customer/ViewOrderList">Danh Sách Đơn Đặt</a></li>*@
                <li><a class="nav-item" href="~/Customer/FavoriteList">Dịch Vụ Yêu Thích</a></li>
            </ul>
        </div>
        <a class="btn btn-danger" href="~/Customer/Logout">Logout</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

    <script>
            @Styles.Render("~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js")
    </script>
</body>
</html>
@section script{
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
}
