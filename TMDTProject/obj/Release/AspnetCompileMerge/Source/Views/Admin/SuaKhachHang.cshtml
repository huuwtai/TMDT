@model TMDTProject.Models.KhachHang
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Sửa Thông Tin Đối Tác</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <label>Mã Khách Hàng:  @Html.DisplayFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control" } })</label>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaKH)

            <div class="form-group">
                <label for="LoaiDichVu">Loại Khách Hàng: </label>
                <div class="col-md-10">
                    @Html.DropDownList("MaLoaiKH", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaLoaiKH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="AnhLogo">Ảnh Đại Diện</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AnhDaiDien, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AnhDaiDien, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="TenDT">Họ và Tên</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="GioiTinh">Giới Tính</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GioiTinh, new { style = "width: 280px;", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="NgaySinh">Ngày Sinh</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgaySinh, new { style = "width: 280px;", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="DiaChi">Địa Chỉ</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.DiaChi, new { style = "width: 280px;", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Email, new { style = "width: 280px;", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="SDT">SDT</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.SDT, new { style = "width: 280px;", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="FACEBOOK">FaceBook</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Facebook, new { style = "width: 280px;", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Facebook, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                    <a href="~/Admin/QuanLyKhachHang" class="btn btn-danger">Huỷ</a>
                </div>
            </div>
        </div>
    }
</div>