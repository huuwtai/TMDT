@model TMDTProject.Models.DoiTac
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Xoá Đối Tác</h1>
    <h3 class="h3 mb-4 text-gray-800">Bạn có đồng ý xoá đối tác này không?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <label class="text-gray-900">Mã Đối Tác:  @Html.DisplayFor(model => model.MaDT, new { htmlAttributes = new { @class = "form-control col-md-2" } })</label>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaDT)

            <div class="form-group">
                <label for="LoaiDichVu" class="text-gray-900">Loại Dịch Vụ: @Html.DisplayFor(model => model.LoaiDoiTac.TenLoaiDT)</label>
            </div>

            <div class="form-group">
                <label for="LoaiDichVu" class="text-gray-900">Loại Đối Tác: @Html.DisplayFor(model => model.LoaiDichVu.TenLoaiDV)</label>
            </div>

            <div class="form-group">
                <label for="TenDT" class="text-gray-900">Tên Đối Tác: @Html.DisplayFor(model => model.TenDT)</label>
            </div>

            <div class="form-group">
                <label for="AnhLogo" class="text-gray-900">Ảnh Logo Đối Tác: </label>
                <img src="@Model.AnhLogo" alt="Hình ảnh đối tác">
            </div>

            <div class="form-group">
                <label for="ThongTinChiTiet" class="text-gray-900">Thông Tin Chi Tiết: @Html.DisplayFor(model => model.ThongTinChiTiet)</label>
            </div>

            <div class="form-group">
                <label for="ThongTinLienHe" class="text-gray-900">Thông Tin Liên Hệ: @Html.DisplayFor(model => model.ThongTinLienHe) </label>
            </div>

            <div class="form-group">
                <label for="DiaChi" class="text-gray-900">Địa Chỉ:  @Html.DisplayFor(model => model.DiaChi)</label>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xoá" class="btn btn-success" />
                    <a href="~/Admin/QuanLyDoiTac" class="btn btn-danger">Huỷ</a>
                </div>
            </div>
        </div>
    }
</div>
