@model TMDTProject.Models.voucher
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Thêm Voucher</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <label>Mã Voucher: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaVoucher, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaVoucher, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Code">Mã Code áp dụng: </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaCode, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="Discount">Giá trị giảm giá(%): </label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.discount, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="TenDT">Ngày hết hạn: </label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.expiration_date, "{0:d}", new { @class = "form-control datepicker expiration_date" })
                    @Html.ValidationMessageFor(model => model.expiration_date, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-success" />
                    <a href="~/Admin/QuanLyDoiTac" class="btn btn-danger">Huỷ</a>
                </div>
            </div>
        </div>
    }
</div>