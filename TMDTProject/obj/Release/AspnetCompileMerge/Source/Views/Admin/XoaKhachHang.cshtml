@model TMDTProject.Models.KhachHang
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Xoá Khách Hàng</h1>
    <h3 class="h3 mb-4 text-gray-800">Bạn có đồng ý xoá khách hàng này không?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <label class="text-gray-900">Mã Khách Hàng:  @Html.DisplayFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control col-md-2" } })</label>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaKH)

            <div class="form-group">
                <label for="MaLoaiKH" class="text-gray-900">Loại Khách Hàng: @Html.DisplayFor(model => model.LoaiKhachHang.TenLoaiKH)</label>
            </div>

            <div class="form-group">
                <label for="AnhDaiDien" class="text-gray-900">Ảnh Đại Diện: </label>
                <img src="@Model.AnhDaiDien" alt="Hình ảnh đại diện">
            </div>

            <div class="form-group">
                <label for="HoTen" class="text-gray-900">Họ Tên: @Html.DisplayFor(model => model.HoTen)</label>
            </div>

            <div class="form-group">
                <label for="GioiTinh" class="text-gray-900">Giới Tính: @Html.DisplayFor(model => model.GioiTinh)</label>
            </div>

            <div class="form-group">
                <label for="NgaySinh" class="text-gray-900">Ngày Sinh: @Html.DisplayFor(model => model.NgaySinh)</label>
            </div>

            <div class="form-group">
                <label for="DiaChi" class="text-gray-900">Địa Chỉ: @Html.DisplayFor(model => model.DiaChi)</label>
            </div>

            <div class="form-group">
                <label for="Email" class="text-gray-900">Email: @Html.DisplayFor(model => model.Email)</label>
            </div>

            <div class="form-group">
                <label for="SDT" class="text-gray-900">SDT: @Html.DisplayFor(model => model.SDT)</label>
            </div>

            <div class="form-group">
                <label for="Facebook" class="text-gray-900">Facebook: @Html.DisplayFor(model => model.Facebook)</label>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xoá" class="btn btn-success" />
                    <a href="~/Admin/QuanLyKhachHang" class="btn btn-danger">Huỷ</a>
                </div>
            </div>
        </div>
    }
</div>