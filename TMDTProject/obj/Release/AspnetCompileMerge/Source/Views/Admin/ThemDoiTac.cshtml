@model TMDTProject.Models.DoiTac
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Thêm Đối Tác</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <label>Mã Đối Tác: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaDT, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="LoaiDichVu">Loại Dịch Vụ</label>
                <<div class="col-md-10">
                    @Html.DropDownList("MaLoaiDV", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaLoaiDV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="LoaiDichVu">Loại Đối Tác</label>
                <div class="col-md-10">
                    @Html.DropDownList("MaLoaiDT", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaLoaiDT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="TenDT">Tên Đối Tác</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDT, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenDT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="AnhLogo">Ảnh Logo Đối Tác</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AnhLogo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AnhLogo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="ThongTinChiTiet">Thông Tin Chi Tiết</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.ThongTinChiTiet, new { style = "width: 280px;", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThongTinChiTiet, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="ThongTinLienHe">Thông Tin Liên Hệ</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThongTinLienHe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThongTinLienHe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="DiaChi">Địa Chỉ</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-success" />
                    <a href="~/Admin/QuanLyDoiTac" class="btn btn-danger">Huỷ</a>
                </div>
            </div>
        </div>
    }
</div>
