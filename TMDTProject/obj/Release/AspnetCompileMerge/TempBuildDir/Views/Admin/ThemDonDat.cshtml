@model TMDTProject.Models.DonDat
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Thêm Đơn Đặt</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <label>Mã Đơn: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaDon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaDon, "", new { @class = "text-danger" })
            </div>

            </div>
            <div class="form-group">
                <label for="LoaiDichVu">Khách Hàng</label>
                <<div class="col-md-10">
                    @Html.DropDownList("MaKhachHang", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="TenKH">Ngày Đặt</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NgayDat, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NgayDat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="AnhLogo">Số Khách</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoKhach, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoKhach, "", new { @class = "text-danger" })
                </div>
            </div>

         
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-success" />
                    <a href="~/Admin/QuanLyDonDat" class="btn btn-danger">Huỷ</a>
                </div>
            </div>

    }
</div>