@model TMDTProject.Models.VeMayBay
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Xoá Vé Máy Bay</h1>
    <h3 class="h3 mb-4 text-gray-800">Bạn có đồng ý vé máy bay này không?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <label class="text-gray-900">Mã Vé Máy Bay:  @Html.DisplayFor(model => model.MaVeMB, new { htmlAttributes = new { @class = "form-control col-md-2" } })</label>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaVeMB)

    <div class="form-group">
        <label for="LoaiDichVu" class="text-gray-900">Tên Vé Máy Bay: @Html.DisplayFor(model => model.TenVe)</label>
    </div>
    <div class="form-group">
        <label for="ThongTinLienHe" class="text-gray-900">Đối Tác Cung Cấp: @Html.DisplayFor(model => model.DoiTac.TenDT) </label>
    </div>
    <div class="form-group">
        <label for="AnhLogo" class="text-gray-900">Ảnh Logo Đối Tác: </label>
        <img src="@Model.Anh" alt="Hình ảnh đối tác">
    </div>

    <div class="form-group">
        <label for="TenDT" class="text-gray-900">Giá Vé: @Html.DisplayFor(model => model.Gia)</label>
    </div>

    <div class="form-group">
        <label for="ThongTinChiTiet" class="text-gray-900">Thông Tin Chi Tiết: @Html.DisplayFor(model => model.ChiTiet)</label>
    </div>

    <div class="form-group">
        <label for="ThongTinLienHe" class="text-gray-900">Tình Trạng: @Html.DisplayFor(model => model.TinhTrang.TenTT) </label>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xoá" class="btn btn-success" />
            <a href="~/Admin/QuanLyVeMayBay" class="btn btn-danger">Huỷ</a>
        </div>
    </div>
</div>
    }
</div>
