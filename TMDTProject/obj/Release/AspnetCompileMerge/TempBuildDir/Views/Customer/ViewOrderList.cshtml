@model List<TMDTProject.Models.DonDat>
@{
    Layout = "~/Views/SharedAdmin/CustomerSharedLayout.cshtml";
}
<h2>Danh sách đơn đã đặt</h2>

<table class="table">
    <tr>
        <th>Mã đơn</th>
        <th>Ngày đặt</th>
        <th>Số khách</th>
        <th>Tình trạng Hoá Đơn</th>
        <th>Tùy chọn</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaDon</td>
            <td>@item.NgayDat</td>
            <td>@item.SoKhach</td>
            <td>@ViewBag.TinhTrangHoaDon[item.MaDon]</td> <!-- Hiển thị tình trạng hóa đơn -->
            <td>
                @Html.ActionLink("Xem chi tiết", "ViewOrder", new { id = item.MaDon }, new { @class = "btn btn-info" })
                @Html.ActionLink("Huỷ Đặt", "CancelBook", new { id = item.MaDon }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
