@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/SharedAdmin/PartnerSharedLayout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Partner", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <label for="currentPassword">Mật khẩu hiện tại:</label>
        <input type="password" id="currentPassword" name="currentPassword" class="form-control" />
    </div>
    <div>
        <label for="newPassword">Mật khẩu mới:</label>
        <input type="password" id="newPassword" name="newPassword" class="form-control" />
    </div>
    <div>
        <label for="confirmNewPassword">Xác nhận mật khẩu mới:</label>
        <input type="password" id="confirmNewPassword" name="confirmNewPassword" class="form-control" />
    </div>
    <input type="submit" value="Thay đổi mật khẩu" class="btn btn-outline-success" style="margin-top:20px;" onclick="return validatePasswords()" />
}
<p>@ViewBag.Message</p>
<p>@ViewBag.Error</p>
<script>
    function validatePasswords() {
        var newPassword = document.getElementById("newPassword").value;
        var confirmNewPassword = document.getElementById("confirmNewPassword").value;
        if (newPassword !== confirmNewPassword) {
            alert("Mật khẩu mới và xác nhận mật khẩu mới không khớp.");
            return false; // Ngăn chặn việc gửi form nếu mật khẩu không khớp
        }
        return true; // Cho phép gửi form nếu mật khẩu khớp
    }
</script>
