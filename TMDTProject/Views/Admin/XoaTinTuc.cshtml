@model TMDTProject.Models.TinTuc
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Xoá Tin Tức</h1>
    <h3 class="h3 mb-4 text-gray-800">Bạn có đồng ý xoá tin tức này không?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <label>Mã Tin Tức:  @Html.DisplayFor(model => model.MaTinTuc, new { htmlAttributes = new { @class = "form-control" } })</label>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaTinTuc)

            <div class="form-group">
                <label for="LoaiDichVu">Danh Mục:  @Html.DisplayFor(model => model.DanhMuc.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })</label>
            </div>
            <div class="form-group">
                <label for="LoaiDichVu">Đến Khách Hàng:  @Html.DisplayFor(model => model.KhachHang.HoTen, new { htmlAttributes = new { @class = "form-control" } })</label>
            </div>
            <div class="form-group">
                <label for="LoaiDichVu">Đến Đối Tác:   @Html.DisplayFor(model => model.DoiTac.TenDT, new { htmlAttributes = new { @class = "form-control" } })</label>
            </div>
            <div class="form-group">
                <label for="LoaiDichVu">Tiêu đề tin tức: @Html.DisplayFor(model => model.TieuDe, new { htmlAttributes = new { @class = "form-control" } })</label>
            </div>

            <div class="form-group">
                <label for="TenKH">Nội Dung Tin Tức:  @Html.DisplayFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })</label>
            </div>

            <div class="form-group">
                <label for="AnhLogo">Tác Giả: @Html.DisplayFor(model => model.TacGia, new { htmlAttributes = new { @class = "form-control" } })</label>
            </div>

            <div class="form-group">
                <label for="NgaySinh">Ngày Đăng: @Html.DisplayFor(model => model.NgayDang, new { htmlAttributes = new { @class = "form-control datepicker" } })</label>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-success" />
                        <a href="~/Admin/QuanLyTinTuc" class="btn btn-danger">Huỷ</a>
                    </div>
                </div>
            </div>

        </div>

    }
</div>