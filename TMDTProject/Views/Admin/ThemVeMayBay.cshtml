@model TMDTProject.Models.VeMayBay
@{
    ViewBag.Title = "ThemVeMayBay";
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}


<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Thêm Vé Máy Bay</h1>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal">
            <label>Mã Vé Máy Bay: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaVeMB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaVeMB, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="LoaiDichVu">Đối Tác</label>
                <<div class="col-md-10">
                    @Html.DropDownList("MaDT", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaDT, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label for="TenDT">Tên Vé Máy Bay</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenVe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenVe, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="AnhLogo">Ảnh Vé Máy Bay</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Anh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Anh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="ThongTinChiTiet">Giá Vé</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Gia, new { style = "width: 280px;", htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="ThongTinLienHe">Chi Tiết</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ChiTiet, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ChiTiet, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label for="DiaChi">Tình Trạng</label>
                <div class="col-md-10">
                    @Html.DropDownList("MaTT", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MaDT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-success" />
                    <a href="~/Admin/QuanLyVeMayBay" class="btn btn-danger">Huỷ</a>
                </div>
            </div>
        </div>
    }
</div>



