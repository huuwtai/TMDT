@model TMDTProject.Models.voucher
@{
    Layout = "~/Views/SharedAdmin/AdminSharedLayout.cshtml";
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-4 text-gray-800">Xoá Đối Tác</h1>
    <h3 class="h3 mb-4 text-gray-800">Bạn có đồng ý xoá đối tác này không?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <label class="text-gray-900">Mã Voucher:  @Html.DisplayFor(model => model.MaVoucher, new { htmlAttributes = new { @class = "form-control" } })</label>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaVoucher)

            <div class="form-group">
                <label for="MaCode" class="text-gray-900">Mã Code áp dụng: @Html.DisplayFor(model => model.MaCode)</label>
            </div>

            <div class="form-group">
                <label for="LoaiDichVu" class="text-gray-900">Giá trị giảm giá(%): @Html.DisplayFor(model => model.discount)</label>
            </div>

            <div class="form-group">
                <label for="TenDT" class="text-gray-900">Ngày hết hạn: @Html.DisplayFor(model => model.expiration_date)</label>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Xoá" class="btn btn-success" />
                    <a href="~/Admin/QuanLyVoucher" class="btn btn-danger">Huỷ</a>
                </div>
            </div>
        </div>
    }
</div>